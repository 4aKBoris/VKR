<resources>

    <style name="Theme.VKR.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VKR.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextForTextView</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextForTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/atma_light</item>
    </style>

    <style name="TextForButton">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/atma_light</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="EditTextPassword">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextForTextView</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:background">@drawable/edit_text_password</item>
        <item name="android:layout_margin">20sp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10sp</item>
        <item name="android:textAppearance">@style/TextForButton</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="TextForListFile">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonVisibility">
        <item name="android:background">@drawable/button_visibility</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/atma_light</item>
        <item name="android:shadowColor">@color/title_additional</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:textColor">@color/title_main</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextForSeekBar">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/atma_light</item>
    </style>

    <style name="TextForSettingsTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/atma_light</item>
    </style>

    <style name="TextForSettingsCheckBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/atma_light</item>
        <item name="buttonTint">@color/check_box</item>
    </style>

    <style name="Switch" parent="TextForSettingsCheckBox">
        <item name="android:trackTint">#FF0505</item>
        <item name="android:radius">10sp</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">#000000</item>
    </style>

    <style name="SettingsTitle2">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/atma_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">#E3065E</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="Line">
        <item name="android:layout_height">1sp</item>
        <item name="android:background">#656A6A</item>
        <item name="android:layout_marginStart">5sp</item>
        <item name="android:layout_marginEnd">5sp</item>
    </style>

    <style name="Font">
        <item name="fontFamily">@font/atma_light</item>
    </style>

    <style name="SeekBarText">
        <item name="android:textAppearance">@style/Font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#656A6A</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SeekBarMainText">
        <item name="android:textAppearance">@style/Font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SeekBar">
        <item name="android:thumbTint">@color/thumb</item>
        <item name="android:progressTint">#E31212</item>
        <item name="android:progressBackgroundTint">#E8FF00</item>
    </style>

    <style name="SeekBarDiscrete" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:thumbTint">@color/thumb</item>
        <item name="android:progressTint">#E31212</item>
        <item name="android:progressBackgroundTint">#E8FF00</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:textAppearance">@style/Font</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>